{
  "manifest_version": 3,
  "name": "Keyword Density Analyzer",
  "version": "1.0",
  "description": "Bu eklenti, web sayfalarındaki anahtar kelime yoğunluğunu analiz eder.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
